<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many steps did you take today?"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_marginTop="16px"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="16px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight=".30"
                    android:layout_height="104dp"
                    android:src="@drawable/tracker"
                    android:layout_width="0dp" />
                <EditText
                    android:id="@+id/steps"
                    android:layout_weight=".70"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:digits="0123456789"
                    android:hint="Steps"
                    android:inputType="number" />
            </LinearLayout>
    </GridLayout>

    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How much water did you drink today?"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight=".3"
                android:layout_height="104dp"
                android:layout_width="0dp"
                android:src="@drawable/water" />
            <EditText
                android:id="@+id/water"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:digits="0123456789"
                android:hint="Water"
                android:inputType="number" />
        </LinearLayout>
    </GridLayout>


    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Times"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_height="104dp"
                android:layout_weight=".30"
                android:layout_width="0dp"
                android:src="@drawable/bed" />
            <TextView
                android:id="@+id/sleep"
                android:layout_weight=".35"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Sleep"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:drawableTop="@drawable/ic_baseline_access_time_24"
                android:background="@android:drawable/editbox_background"
                />
            <TextView
                android:id="@+id/wake"
                android:layout_weight=".35"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Wake"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:drawableTop="@drawable/ic_baseline_access_time_24"
                android:background="@android:drawable/editbox_background"
                />
        </LinearLayout>
    </GridLayout>
    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tts_icon"
            android:layout_width="58dp"
            android:layout_height="51dp"
            app:srcCompat="@drawable/tts_symbol" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>
