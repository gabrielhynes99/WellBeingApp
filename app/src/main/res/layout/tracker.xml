<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many steps did you take today?"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="104dp"
                    android:src="@drawable/tracker" />
                <EditText
                    android:id="@+id/steps"
                    android:layout_width="265dp"
                    android:layout_height="match_parent"
                    android:digits="0123456789"
                    android:hint="Steps"
                    android:inputType="number" />
            </LinearLayout>
    </GridLayout>

    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How much water did you drink today??"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="133dp"
                android:layout_height="104dp"
                android:src="@drawable/water" />
            <EditText
                android:id="@+id/sleep"
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:digits="0123456789"
                android:hint="Water"
                android:inputType="number" />
        </LinearLayout>
    </GridLayout>


    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="3.5"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Sleep"
                android:layout_gravity="center"
                android:textSize="25sp"/>

            <ImageView
                android:layout_width="487dp"
                android:layout_height="152dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/sleep_tracker" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>
